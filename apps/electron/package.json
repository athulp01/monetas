{
  "name": "electron-wrapper",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=v16.13",
    "pnpm": ">=8.1"
  },
  "main": "layers/main/dist/index.cjs",
  "scripts": {
    "dev": "node scripts/watch.js",
    "build": "pnpm run build:main && pnpm run build:preload",
    "build:main": "cd ./layers/main && vite build",
    "build:preload": "cd ./layers/preload && vite build",
    "build:preload:types": "dts-cb -i \"layers/preload/tsconfig.json\" -o \"layers/preload/exposedInMainWorld.d.ts\"",
    "compile": "cross-env MODE=production pnpm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts",
    "typecheck:main": "tsc --noEmit -p layers/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p layers/preload/tsconfig.json",
    "typecheck": "pnpm run typecheck:main && pnpm run typecheck:preload"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "cross-env": "7.0.3",
    "dts-for-context-bridge": "0.7.1",
    "electron": "17.0.0",
    "electron-builder": "22.14.5",
    "electron-devtools-installer": "3.2.0",
    "eslint": "8.8.0",
    "eslint-plugin-vue": "8.4.0",
    "typescript": "4.5.5",
    "vite": "2.7.13"
  },
  "dependencies": {
    "electron-updater": "4.6.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
